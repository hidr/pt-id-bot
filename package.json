{
  "name": "id-bot",
  "version": "0.0.0-development",
  "description": "",
  "main": "index.js",
  "files": ["index.js", "lib"],
  "scripts": {
    "start": "probot run ./index.js",
    "test": "jest",
    "test:watch": "jest . --watch",
    "semantic-release": "semantic-release"
  },
  "standard": {
    "globals": ["jest", "it", "expect", "describe"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hidr/id-bot.git"
  },
  "keywords": ["probot", "probot-plugin"],
  "author": "Gregor Martynus (https://github.com/hidr)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hidr/id-bot/issues"
  },
  "homepage": "https://github.com/hidr/id-bot#readme",
  "dependencies": {
    "probot": "^6.0.0"
  },
  "jest": {
    "testRegex": "/test/unit/.+\\.test\\.js$"
  },
  "devDependencies": {
    "jest": "^22.3.0",
    "localtunnel": "^1.8.3",
    "semantic-release": "^15.0.0"
  },
  "engines": {
    "node": ">=8.3.0",
    "npm": ">=5.3.0"
  },
  "now": {
    "alias": "id-bot",
    "env": {
      "APP_ID": "@id-bot-app-id",
      "LOG_LEVEL": "@id-bot-log-level",
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@id-bot-private-key",
      "WEBHOOK_SECRET": "@id-bot-webhook-secret"
    }
  }
}
